<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_purple"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/linear_layout_images"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/purple_light"
        android:padding="14dp">

        <ImageView
            android:id="@+id/image_all"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_all" />

        <ImageView
            android:id="@+id/image_happy"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_happy" />

        <ImageView
            android:id="@+id/image_sunny"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_sunny" />

    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:id="@+id/text_hello_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_images"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/cabin"
        android:text="Hello World!"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_phrases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/cabin"
        android:gravity="center"
        android:text="Motivation"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="150dp"
        android:layout_height="3dp"
        android:layout_below="@+id/text_phrases"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:backgroundTint="@color/black" />

    <Button
        android:id="@+id/button_new_phrase"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/cabin"
        android:text="Nova Frase"
        android:textAllCaps="true"
        android:layout_marginBottom="24dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/purple_light_button"/>


</RelativeLayout>